<Application
    x:Class="SonicStreamer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SonicStreamer"
    xmlns:common="using:SonicStreamer.Common"
    xmlns:vm="using:SonicStreamer.ViewModels"
    RequestedTheme="Dark">

    <Application.Resources>

        <!--Allgemeine Ressourcen-->

        <x:String x:Key="AppName">SonicStreamer</x:String>
        <common:BooleanToColorConverter x:Key="BooleanToColorConverter" />
        <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <common:SelectionModeToBooleanConverter x:Key="SelectionModeToBooleanConverter" />

        <!--ViewModels-->

        <vm:MainViewModel x:Key="MainVM" />
        <vm:LoginViewModel x:Key="LoginVM" />
        <vm:ApplicationSettingsViewModel x:Key="SettingsVM" />
        <vm:PlaybackViewModel x:Key="PlaybackVM" />
        <vm:StartViewModel x:Key="StartVM" />
        <vm:SearchViewModel x:Key="SearchVM" />
        <vm:ArtistsViewModel x:Key="ArtistVM" />
        <vm:AlbumViewModel x:Key="AlbumVM" />
        <vm:TrackListingViewModel x:Key="TrackListingVM" />
        <vm:FolderViewModel x:Key="FolderVM" />
        <vm:PlaylistViewModel x:Key="PlaylistVM" />
        <vm:PodcastViewModel x:Key="PodcastVM" />

    </Application.Resources>

</Application>